<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:padding="16dp">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puan: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF6B6B"
        android:fontFamily="casual"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playSoundCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#4A90E2"
        app:strokeWidth="0dp"
        app:cardPreventCornerOverlap="true"
        app:checkedIcon="@null"
        android:stateListAnimator="@null"
        app:rippleColor="#33000000"
        android:checkable="false"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/playSoundIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/ic_volume_up"
            android:tint="#FFFFFF"/>

    </com.google.android.material.card.MaterialCardView>

    <GridLayout
        android:id="@+id/answersContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/playSoundCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/answer1Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#FFE066"
            app:strokeWidth="0dp"
            app:cardPreventCornerOverlap="true"
            app:checkedIcon="@null"
            android:stateListAnimator="@null"
            app:rippleColor="#33000000"
            android:checkable="false">

            <ImageView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/answer2Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#98FB98"
            app:strokeWidth="0dp"
            app:cardPreventCornerOverlap="true"
            app:checkedIcon="@null"
            android:stateListAnimator="@null"
            app:rippleColor="#33000000"
            android:checkable="false">

            <ImageView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/answer3Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#87CEEB"
            app:strokeWidth="0dp"
            app:cardPreventCornerOverlap="true"
            app:checkedIcon="@null"
            android:stateListAnimator="@null"
            app:rippleColor="#33000000"
            android:checkable="false">

            <ImageView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/answer4Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#DDA0DD"
            app:strokeWidth="0dp"
            app:cardPreventCornerOverlap="true"
            app:checkedIcon="@null"
            android:stateListAnimator="@null"
            app:rippleColor="#33000000"
            android:checkable="false">

            <ImageView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 